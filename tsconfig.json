{
  "compilerOptions": {
    "declaration": true,
    "diagnostics": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "traceResolution": false,
    "listEmittedFiles": false,
    "listFiles": false,
    "pretty": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["es2015", "dom"],
    "sourceMap": true,
    "noEmit": false
  },
  "compileOnSave": false,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
